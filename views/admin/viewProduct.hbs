<section class="pt-5">
	<div class="container">
		<div class="col-7 mt-5 mb-3">
			<a href="/admin/addProduct" class="btn m-auto" style="background-color: #FFC6D1">Add products</a>
		</div>
		<table class="table pt-3" id="tableS">
			<thead>
				<tr>
					<th scope="col">Title</th>
					<th scope="col">Category</th>
					<th scope="col">Description</th>
					<th scope="col">Price</th>
					<th scope="col">Image</th>
					<th scope="col">Options</th>
				</tr>
			</thead>
			<tbody>
				{{#each products}}
				<tr>

					<td>{{this.Name}}</td>
					<td>{{this.Category}}</td>
					<td>{{this.Description}}</td>
					<td>{{this.Price}}</td>
					<td><img src="/images/product/{{this._id}}.jpg" style="width:4em;height:4em" /></td>
					<td>
						<a href="/admin/edit-product/{{this._id}}" class="btn btn-secondary">edit</a>
						<a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure? Do you want to delete {{this.name}}')" class="btn btn-danger">delete</a>
					</td>
				</tr>	
				{{/each}}
			</tbody>
		</table>
	</div>
</section>
	<script>
        $(document).ready(function () {
            $('#tableS').DataTable();
        });
	</script>


