<header class="header" id="header">
    <nav class="navbar container">
        <a href="/" class="brand"><img src="/images/logo.png"  class="brand"/></a>
        <div class="burger ps-2" id="burger">
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
        </div>
        <span class="overlay"></span>
        <div class="menu" id="menu">
            <ul class="menu-inner">
                <li class="menu-item"><a class="menu-link" href="/">Home</a></li>
                <li class="menu-item"><a class="menu-link" href="/user/products">Products</a></li>
                <li class="menu-item"><a class="menu-link" href="#">Contact</a></li>
                <li class="menu-item">
                    <a class="menu-link" href="/cart">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag mb-1" viewBox="0 0 16 16">
                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                        </svg>{{#if Count}}<span id="cart" class="badge text-black">{{Count}}</span>{{/if}}
                    </a>
                </li>
                {{#if user}}
                <li class="menu-item"><a class="menu-link" href="#">Account</a></li>
                <li class="menu-item"><a class="menu-link" href="/viewOrder">Orders</a></li>
                <li class="menu-item"><a class="menu-link" href="/logout">Logout</a></li>
                {{else if place}}
                <li class="menu-item"><a class="menu-link" href="#">Orders</a></li>
                {{else}}
                <li class="menu-item"><a class="menu-link" href="/login">Login</a></li>
                {{/if}}
            </ul>
        </div>
        <span><i class="bx bx-search search-toggle pt-2 pe-3"></i></span>
        <div class="search-block">
            <form class="search-form">
                <span><i class="bx bx-arrow-back search-cancel"></i></span>
                <input type="search" name="search" class="search-input" placeholder="Enter your choice">
            </form>
        </div>
    </nav>
</header>